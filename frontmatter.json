{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "memo",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Publishing date",
          "name": "created",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "updated",
          "name": "updated",
          "type": "datetime"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "default": "memo"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "updated",
          "name": "updated",
          "type": "datetime"
        },
        {
          "title": "preview",
          "name": "preview",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": "assets",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/_posts"
    },
    {
      "title": "drafts",
      "path": "[[workspace]]/_drafts"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.preview.host": "http://localhost:4000"
}